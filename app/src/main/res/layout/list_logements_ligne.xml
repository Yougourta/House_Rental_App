<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="8dp"
    android:elevation="0dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:elevation="16dp"
        android:padding="0dp"
        android:scrollbars="vertical"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="0dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:elevation="16dp"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageViewLigne"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/prixLigne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewLigne"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
                android:textColor="#7fa87f"
                android:textSize="22sp"
                android:textStyle="bold"

                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageViewLigne" />

            <TextView
                android:id="@+id/surfaceLigne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/prixLigne"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:text="Surface"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/prixLigne" />

            <TextView
                android:id="@+id/adresseLigne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/surfaceLigne"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/ic_location_on"
                android:gravity="center_vertical"
                android:paddingLeft="-7dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:text="Akbou, Bejaia, 06000"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/surfaceLigne"
                card_view:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>